curl --data "
(define (last l) 
  (cond ((null? l) (error \"can't get last of empty list\"))
        ((null? (cdr l)) (car l))
        (else (last (cdr l)))))
(last '(1 2 3 4))
(last '(1 2 3))
(last '(1 2))
(last '(1))
(last '(a . b))
(last '())
