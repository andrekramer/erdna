curl --data "
(define (make-stack) 
  (letrec
    ((stack '()))
    (define (push value) (set! stack (cons value stack)))
    (define (pop) 
      (if (empty) 
        (error \"stack is empty\") 
        (let 
          ((top (car stack))) 
          (set! stack (cdr stack)) 
          top)))
    (define (peek) 
      (if (empty) 
        (error \"stack is empty\") 
        (car stack)))
    (define (empty) (null? stack))
    (lambda (op)
      (case op
        (('push) push)
        (('pop) pop)
        (('peek) peek)
        (('empty) empty)
        (else (error \"no such message for stacks\"))))))
(define stack (make-stack))
((stack 'push) 1)
((stack 'push) 2)
((stack 'push) 3)
((stack 'pop))
((stack 'pop))
((stack 'empty))
((stack 'pop))
((stack 'empty))
((stack 'push) \"an stack item\")
((stack 'peek))
((stack 'pop))
((stack 'pop))
" localhost:8080

