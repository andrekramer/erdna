(define-rewriter unless
   (lambda (expr)
      (list 'if (cadr expr) '() (append (list 'begin) (cddr expr)))
))
(unless (equal? 1 1) (+ 1 2) (* 2 2))
(unless (null? '(1)) '(a b) '(1 2))
(unless (not (equal? 1 1)) (+ 1 2) 'a (* 2 2))
(unless (null? '()) '(a b) 1 '(1 2))
