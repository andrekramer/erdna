export bq='`';curl  --data-raw "
(define-rewriter swap
   (lambda (expr)
      (let ((temp (unquote (cadr expr))))
        (let ((a (cadr expr))
              (b (caddr expr)))
             $bq(begin (set! ,a ,b) (set! ,b ,temp))))))
(define x 1)
(define y 2)
(swap x y)
x
y
