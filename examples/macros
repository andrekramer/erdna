(define-rewriter when
   (lambda (expr)
      (list 'if (cadr expr) (append (list 'begin) (cddr expr)) '())
))
(when (equal? 1 1) (+ 1 2) (* 2 2))
(when (null? '(1)) '(a b) '(1 2))
(when (not (equal? 1 1)) (+ 1 2) 'a (* 2 2))
(when (null? '()) '(a b) 1 '(1 2))
