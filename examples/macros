(define-rewriter or2
   (lambda (expr)
      (let ((a (cadr expr))
            (b (caddr expr)))
           (cons 'let 
                 (cons 
                   (list (list 'temp a)) 
                   (list (append '(if temp temp) (list b)))))
      )))
(define (repeat n b) (if (equal? n 0) (or2 #f b) (repeat (- n 1) (not b))))
